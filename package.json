{
  "name": "pilolli.dev",
  "description": "Il sito di Antonio Pilolli.",
  "version": "0.0.1",
  "repository": "https://github.com/pilo7989/pilolli.it.git",
  "author": "Antonio Pilolli",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,md,mdx}\""
  },
  "dependencies": {
    "@chakra-ui/core": "^1.0.0-rc.3",
    "@chakra-ui/theme": "^1.0.0-rc.3",
    "@chakra-ui/theme-tools": "1.0.0-rc.3",
    "@mdx-js/loader": "^1.6.16",
    "@mdx-js/react": "^1.6.16",
    "gray-matter": "^4.0.2",
    "next": "^9.5.2",
    "next-google-fonts": "^1.2.1",
    "next-mdx-remote": "^1.0.0",
    "next-remote-watch": "^0.2.0",
    "next-seo": "^4.7.3",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-slug": "^6.0.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx",
    "Antonio Pilolli",
    "pilolli.dev",
    "Frontend developer",
    "UI/UX Designer"
  ],
  "license": "MIT"
}
